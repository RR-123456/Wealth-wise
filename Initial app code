    <script>
        const config = { name: "Pragath.B RR", pin: "1234", lang: "en" };
        const scripts = {
            en: () => `Welcome ${config.name}. Your net worth is ‚Çπ15L. Your 2028 target is ‚Çπ28.5L.`,
            ta: () => `‡Æµ‡Æ£‡Æï‡Øç‡Æï‡ÆÆ‡Øç ${config.name}. ‡Æâ‡Æô‡Øç‡Æï‡Æ≥‡Øç ‡Æ®‡Æø‡Æï‡Æ∞ ‡ÆÆ‡Æ§‡Æø‡Æ™‡Øç‡Æ™‡ØÅ ‚Çπ15 ‡Æ≤‡Æü‡Øç‡Æö‡ÆÆ‡Øç. 2028 ‡Æá‡Æ≤‡Æï‡Øç‡Æï‡ØÅ ‚Çπ28.5 ‡Æ≤‡Æü‡Øç‡Æö‡ÆÆ‡Øç.`
        };

        function updateClock() { document.getElementById('clock').innerText = new Date().toLocaleString(); }
        setInterval(updateClock, 1000);

        function toggleSettings() { document.getElementById('settings-modal').classList.toggle('hidden'); }

        function saveAndExit() {
            config.name = document.getElementById('user-name').value;
            config.pin = document.getElementById('user-pin').value;
            switchLanguage();
            toggleSettings();
        }

        function switchLanguage() {
            config.lang = document.getElementById('lang').value;
            document.getElementById('bot-speech').innerText = scripts[config.lang]();
        }

        function triggerVoice() {
            const text = scripts[config.lang]();
            const utterance = new SpeechSynthesisUtterance(text);
            utterance.lang = config.lang === 'ta' ? 'ta-IN' : 'en-US';
            utterance.rate = 0.9;
            window.speechSynthesis.speak(utterance);
        }
        
        window.onload = () => { updateClock(); switchLanguage(); };
    </script>
