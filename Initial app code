        <div class="space-y-6">
            <div><label class="text-[10px] text-gray-500 uppercase">Profile Name</label>
            <input type="text" id="user-name" value="Pragath.B RR" class="w-full bg-gray-900 border-b border-blue-900 p-2 text-white outline-none"></div>
            <div><label class="text-[10px] text-gray-500 uppercase">Security PIN</label>
            <input type="password" id="user-pin" value="1234" maxlength="4" class="w-full bg-gray-900 border-b border-blue-900 p-2 text-white outline-none"></div>
            <button onclick="saveAndExit()" class="w-full bg-blue-700 py-4 rounded-2xl font-bold">SAVE & REBOOT</button>
        </div>
